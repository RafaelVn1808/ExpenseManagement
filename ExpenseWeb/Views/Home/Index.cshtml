@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard
            </h2>
            <p class="text-muted mb-0">Visão geral do seu controle de despesas</p>
        </div>
    </div>

    <!-- Cards de Acesso Rápido -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <a asp-controller="Expense" asp-action="Index" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 hover-lift rounded-3">
                    <div class="card-body d-flex align-items-center p-4">
                        <div class="rounded-3 bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-receipt-cutoff text-primary fs-2"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1 fw-semibold text-dark">Despesas</h5>
                            <p class="card-text text-muted small mb-0">Ver e gerenciar despesas</p>
                        </div>
                        <i class="bi bi-chevron-right text-muted ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Expense" asp-action="CreateExpense" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 hover-lift rounded-3">
                    <div class="card-body d-flex align-items-center p-4">
                        <div class="rounded-3 bg-success bg-opacity-10 p-3 me-3">
                            <i class="bi bi-plus-circle text-success fs-2"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1 fw-semibold text-dark">Nova Despesa</h5>
                            <p class="card-text text-muted small mb-0">Cadastrar despesa ou parcela</p>
                        </div>
                        <i class="bi bi-chevron-right text-muted ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Category" asp-action="Index" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 hover-lift rounded-3">
                    <div class="card-body d-flex align-items-center p-4">
                        <div class="rounded-3 bg-info bg-opacity-10 p-3 me-3">
                            <i class="bi bi-tag text-info fs-2"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1 fw-semibold text-dark">Categorias</h5>
                            <p class="card-text text-muted small mb-0">Ver, criar ou excluir categorias</p>
                        </div>
                        <i class="bi bi-chevron-right text-muted ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Card de Boas-vindas -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-8 p-4 p-md-5">
                <h4 class="fw-bold text-dark mb-3">
                    <i class="bi bi-graph-up-arrow text-primary me-2"></i>Controle suas despesas
                </h4>
                <p class="text-muted mb-4">
                    Use o filtro por mês e ano na lista de despesas para ver parcelas em todos os meses em que elas se aplicam.
                    Anexe nota fiscal e comprovante às despesas e visualize as imagens na própria lista.
                </p>
                <a asp-controller="Expense" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-list-ul me-1"></i>Ir para Despesas
                </a>
            </div>
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-4">
                <img src="~/images/GerenciamentoDeDespesa.jpeg" alt="Despesas" class="img-fluid rounded-3" style="max-height: 200px; object-fit: cover;" asp-append-version="true" />
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-person-gear me-1"></i>Permissões de Usuários
            </a>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }
</style>

@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Esqueci minha senha";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseWeb</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body { font-family: 'Inter', sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px; }
        .card-container { background: white; border-radius: 16px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); max-width: 420px; width: 100%; overflow: hidden; }
        .card-header-custom { background: #1e293b; color: white; padding: 2rem; text-align: center; }
        .card-header-custom i { font-size: 2.5rem; color: #3b82f6; }
        .card-body { padding: 2rem; }
        .form-control { border-radius: 8px; padding: 0.75rem 1rem; }
        .btn-submit { width: 100%; background: #3b82f6; border: none; color: white; padding: 0.875rem; border-radius: 8px; font-weight: 600; }
        .btn-submit:hover { background: #2563eb; color: white; }
    </style>
</head>
<body>
    <div class="card-container">
        <div class="card-header-custom">
            <i class="bi bi-key"></i>
            <h2 class="h5 mt-2 mb-0">Esqueci minha senha</h2>
            <p class="small opacity-90 mt-1 mb-0">Informe seu e-mail para receber instruções</p>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="seu@email.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-submit">
                    <i class="bi bi-send me-2"></i>Enviar instruções
                </button>
            </form>
            <div class="text-center mt-4">
                <a asp-action="Login" class="text-decoration-none"><i class="bi bi-arrow-left me-1"></i>Voltar ao login</a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseWeb</title>

    <!-- Google Fonts: Inter (Moderna e Limpa) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Ícones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseWeb.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary-bg: #1e293b; /* Slate 800 - Igual ao React */
            --primary-hover: #0f172a;
            --accent-color: #3b82f6;
            --body-bg: #f8fafc; /* Fundo cinza muito suave */
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--body-bg);
            color: #334155;
        }

        /* Navbar Estilizada */
        .navbar-custom {
            background-color: var(--primary-bg);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            color: white !important;
            font-size: 1.25rem;
            letter-spacing: -0.5px;
        }

        .navbar-brand i {
            margin-right: 8px;
            color: var(--accent-color);
        }

        .nav-link {
            color: #cbd5e1 !important; /* Slate 300 */
            font-weight: 500;
            transition: all 0.2s ease;
            margin: 0 5px;
            border-radius: 6px;
            padding: 8px 16px !important;
        }

        .nav-link:hover, .nav-link.active {
            color: white !important;
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Container Principal */
        main.pb-3 {
            background-color: transparent;
            padding-top: 2rem;
        }

        /* Footer */
        footer {
            background-color: white;
            border-top: 1px solid #e2e8f0;
            padding: 1.5rem 0;
            font-size: 0.9rem;
            margin-top: auto; /* Empurra footer para baixo */
        }

        /* Ajuste para fazer o footer ficar no fim da tela se pouco conteúdo */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-custom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-wallet2"></i> ExpenseWeb
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Expense" asp-action="index">
                                    <i class="bi bi-list-ul me-1"></i> Despesas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">
                                    <i class="bi bi-tag me-1"></i> Categorias
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock me-1"></i> Permissões
                                    </a>
                                </li>
                            }
                            <li class="nav-item ms-2">
                                <a class="nav-link btn btn-primary text-white px-3" style="background-color: var(--accent-color); border:none;" asp-controller="Expense" asp-action="CreateExpense">
                                    <i class="bi bi-plus-lg"></i> Novo
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">
                                    <i class="bi bi-key me-1"></i> Alterar senha
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout" style="color: #fca5a5 !important;">
                                    <i class="bi bi-box-arrow-right me-1"></i> Sair
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2025 - <strong>ExpenseWeb</strong> - Gestão Inteligente
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@model ExpenseWeb.Models.ExpenseViewModel

@{
    ViewData["Title"] = "Editar Despesa";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">

        <!-- Card Principal -->
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h4 class="card-title fw-bold text-secondary">
                    <i class="bi bi-pencil-square me-2 text-primary"></i>Editar Despesa
                </h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="UpdateExpense">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Campo Oculto para o ID (ExpenseId na nova Model) -->
                    <input type="hidden" asp-for="ExpenseId" />

                    <!-- Campos de Controle (Hidden para manter estado se necessário no Post) -->
                    <input type="hidden" asp-for="ReferenceMonth" />
                    <input type="hidden" asp-for="ReferenceYear" />
                    <input type="hidden" asp-for="CurrentInstallment" />

                    <!-- Nome / Descrição -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold text-secondary">Descrição</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-card-text text-muted"></i></span>
                            <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="Ex: Mercado, Gasolina..." />
                        </div>
                        <span asp-validation-for="Name" class="text-danger text-sm"></span>
                    </div>

                    <!-- Linha 1: Valor e Data Início -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label fw-semibold text-secondary">Valor (R$)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-currency-dollar text-muted"></i></span>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control border-start-0 ps-0" placeholder="0,00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Date" class="form-label fw-semibold text-secondary">Data Início</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar3 text-muted"></i></span>
                                <input asp-for="Date" type="date" class="form-control border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Linha 2: Validade e Parcelas (Novos Campos) -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Validity" class="form-label fw-semibold text-secondary">Validade/Vencimento</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar-event text-muted"></i></span>
                                <input asp-for="Validity" type="date" class="form-control border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Validity" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Installments" class="form-label fw-semibold text-secondary">Parcelas</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-123 text-muted"></i></span>
                                <input asp-for="Installments" type="number" min="1" class="form-control border-start-0 ps-0" placeholder="1" />
                            </div>
                            <span asp-validation-for="Installments" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Linha 3: Status e Categoria -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label fw-semibold text-secondary">Status</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-flag text-muted"></i></span>
                                <input asp-for="Status" class="form-control border-start-0 ps-0" placeholder="Ex: Pendente, Pago" />
                            </div>
                            <span asp-validation-for="Status" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="CategoryId" class="form-label fw-semibold text-secondary">Categoria</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-tag text-muted"></i></span>
                                <!-- O asp-items popula o select automaticamente baseado na ViewBag do Controller -->
                                <select asp-for="CategoryId" class="form-select border-start-0 ps-0" asp-items="ViewBag.CategoryId">
                                    <option value="" disabled>Selecione uma categoria...</option>
                                </select>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 me-md-2">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary px-4 fw-bold">
                            <i class="bi bi-check-lg me-1"></i> Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
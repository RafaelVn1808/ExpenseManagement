@model ExpenseWeb.Models.PagedResult<ExpenseWeb.Models.ExpenseViewModel>
@{
    ViewData["Title"] = "Despesas";

    int selectedMonth = ViewBag.SelectedMonth ?? DateTime.Now.Month;
    int selectedYear = ViewBag.SelectedYear ?? DateTime.Now.Year;
    int pageSize = ViewBag.PageSize ?? 20;
    int? filterCategoryId = ViewBag.CategoryId;
    string? filterStatus = ViewBag.Status;
    string? filterSearch = ViewBag.Search;
    var categories = ViewBag.Categories as IEnumerable<ExpenseWeb.Models.CategoryViewModel> ?? Enumerable.Empty<ExpenseWeb.Models.CategoryViewModel>();
    
    var items = Model?.Items ?? Enumerable.Empty<ExpenseWeb.Models.ExpenseViewModel>();
    // Total do mês: à vista = valor total; parcelada = só o valor da parcela daquele mês
    var totalDespesas = items.Sum(e => e.Installments > 1 ? (e.Amount / e.Installments) : e.Amount);
    var quantidadeDespesas = items.Count();
}

<!-- Mensagem de Sucesso -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Cabeçalho da Página -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="bi bi-receipt-cutoff me-2 text-primary"></i>Despesas
        </h2>
        <p class="text-muted mb-0">
            Gerencie suas despesas mensais de forma organizada
        </p>
    </div>
    <div>
        <a asp-action="Create" asp-controller="Category" class="btn btn-info me-2">
            <i class="bi bi-tag-fill me-1"></i> Nova Categoria
        </a>
        <a asp-action="CreateExpense" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Nova Despesa
        </a>
    </div>
</div>

<!-- Card de Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
            <input type="hidden" name="page" value="1" />
            <input type="hidden" name="pageSize" id="pageSizeInput" value="@pageSize" />
            <div class="col-md-2">
                <label class="form-label fw-semibold"><i class="bi bi-calendar3 me-1"></i>Mês</label>
                <select name="month" class="form-select">
                    @for (int m = 1; m <= 12; m++)
                    {
                        <option value="@m" selected="@(m == selectedMonth)">@(System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m))</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold"><i class="bi bi-calendar-year me-1"></i>Ano</label>
                <select name="year" class="form-select">
                    @for (int y = DateTime.Now.Year - 5; y <= DateTime.Now.Year + 1; y++)
                    {
                        <option value="@y" selected="@(y == selectedYear)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold"><i class="bi bi-tag me-1"></i>Categoria</label>
                <select name="categoryId" class="form-select">
                    <option value="">Todas</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.CategoryId" selected="@(filterCategoryId == c.CategoryId)">@c.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold"><i class="bi bi-flag me-1"></i>Status</label>
                <select name="status" class="form-select">
                    <option value="">Todos</option>
                    <option value="Pendente" selected="@(filterStatus == "Pendente")">Pendente</option>
                    <option value="Atrasado" selected="@(filterStatus == "Atrasado")">Atrasado</option>
                    <option value="Pago" selected="@(filterStatus == "Pago")">Pago</option>
                    <option value="Encerrada" selected="@(filterStatus == "Encerrada")">Encerrada</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold"><i class="bi bi-search me-1"></i>Busca</label>
                <input type="text" name="search" class="form-control" placeholder="Nome da despesa" value="@filterSearch" />
            </div>
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-funnel me-1"></i> Filtrar</button>
            </div>
            <div class="col-12 col-md-auto ms-md-auto">
                <label class="form-label fw-semibold"><i class="bi bi-list me-1"></i>Itens por página</label>
                <select id="pageSizeSelect" class="form-select" style="width: auto;">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="20" selected="@(pageSize == 20)">20</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                </select>
            </div>
        </form>
    </div>
</div>

<div class="mb-2">
    <a asp-action="ExportCsv" asp-route-month="@selectedMonth" asp-route-year="@selectedYear" asp-route-categoryId="@filterCategoryId" asp-route-status="@filterStatus" asp-route-search="@filterSearch" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-file-earmark-spreadsheet me-1"></i> Exportar CSV
    </a>
</div>

<!-- Cards de Resumo (apenas se houver despesas) -->
@if (items.Any())
{
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total de Despesas</h6>
                            <h3 class="mb-0 text-primary">@totalDespesas.ToString("C")</h3>
                            <small class="text-muted">À vista: valor total; parcelada: valor da parcela do mês</small>
                        </div>
                        <div class="display-4 text-primary opacity-25">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Quantidade</h6>
                            <h3 class="mb-0 text-info">@quantidadeDespesas</h3>
                        </div>
                        <div class="display-4 text-info opacity-25">
                            <i class="bi bi-list-ul"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Card da Tabela -->
<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="bi bi-table me-2"></i>Lista de Despesas
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">
                            <i class="bi bi-calendar3 me-1"></i>Data
                        </th>
                        <th>
                            <i class="bi bi-card-text me-1"></i>Nome
                        </th>
                        <th>
                            <i class="bi bi-currency-dollar me-1"></i>Valor parcela
                        </th>
                        <th>
                            <i class="bi bi-currency-dollar me-1"></i>Valor total
                        </th>
                        <th>
                            <i class="bi bi-123 me-1"></i>Parcela
                        </th>
                        <th>
                            <i class="bi bi-flag me-1"></i>Status
                        </th>
                        <th>
                            <i class="bi bi-receipt me-1"></i>Nota Fiscal
                        </th>
                        <th>
                            <i class="bi bi-file-earmark-check me-1"></i>Comprovante
                        </th>
                        <th>
                            <i class="bi bi-tag me-1"></i>Categoria
                        </th>
                        <th class="text-center pe-3">
                            <i class="bi bi-gear me-1"></i>Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (!items.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                    <h5>Nenhuma despesa encontrada</h5>
                                    <p class="mb-0">Não há despesas cadastradas para o período selecionado.</p>
                                    <a asp-action="CreateExpense" class="btn btn-success mt-3">
                                        <i class="bi bi-plus-circle me-1"></i> Criar Primeira Despesa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in items)
                        {
                            <tr>
                                <td class="ps-3">
                                    <strong>@item.Date.ToString("dd/MM/yyyy")</strong>
                                </td>
                                <td>
                                    <span class="fw-semibold">@item.Name</span>
                                </td>
                                <td>
                                    @{
                                        var valorParcela = item.Installments > 1 ? (item.Amount / item.Installments) : item.Amount;
                                    }
                                    <span class="fw-bold text-primary">@valorParcela.ToString("C")</span>
                                </td>
                                <td>
                                    <span class="text-secondary">@item.Amount.ToString("C")</span>
                                    @if (item.Installments > 1)
                                    {
                                        <br /><small class="text-muted">(@item.Installments)x</small>
                                    }
                                </td>
                                <td>
                                    @{
                                        var curInst = item.Installments > 1
                                            ? Math.Max(1, Math.Min(1 + (selectedYear - item.ReferenceYear) * 12 + (selectedMonth - item.ReferenceMonth), item.Installments))
                                            : 1;
                                        var label = item.Installments > 1 ? $"{curInst}/{item.Installments}" : "À vista";
                                    }
                                    <span class="badge bg-info text-dark">
                                        <i class="bi bi-123 me-1"></i>@label
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(item.Status)">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.NoteImageUrl))
                                    {
                                        <a href="javascript:void(0)"
                                           class="d-inline-block"
                                           data-bs-toggle="modal"
                                           data-bs-target="#imagePreviewModal"
                                           data-bs-image="@item.NoteImageUrl"
                                           data-bs-title="Nota Fiscal">
                                            <img src="@item.NoteImageUrl"
                                                 alt="Nota Fiscal"
                                                 class="img-thumbnail"
                                                 data-bs-toggle="tooltip"
                                                 data-bs-title="Clique para ampliar"
                                                 style="max-height: 50px; max-width: 70px;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ProofImageUrl))
                                    {
                                        <a href="javascript:void(0)"
                                           class="d-inline-block"
                                           data-bs-toggle="modal"
                                           data-bs-target="#imagePreviewModal"
                                           data-bs-image="@item.ProofImageUrl"
                                           data-bs-title="Comprovante">
                                            <img src="@item.ProofImageUrl"
                                                 alt="Comprovante"
                                                 class="img-thumbnail"
                                                 data-bs-toggle="tooltip"
                                                 data-bs-title="Clique para ampliar"
                                                 style="max-height: 50px; max-width: 70px;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-tag me-1"></i>@item.CategoryName
                                    </span>
                                </td>
                                <td class="text-center pe-3">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="UpdateExpense"
                                           asp-route-id="@item.ExpenseId"
                                           class="btn btn-outline-warning"
                                           title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-delete-expense" title="Excluir"
                                                data-expense-id="@item.ExpenseId" data-expense-name="@item.Name" data-expense-amount="@item.Amount.ToString("F2")">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model != null && Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Paginação de despesas">
        <ul class="pagination justify-content-center">
            @{
                var currentPage = Model.Page;
                var totalPages = Model.TotalPages;
            }
            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-month="@selectedMonth" asp-route-year="@selectedYear"
                   asp-route-page="@(currentPage - 1)" asp-route-pageSize="@pageSize"
                   asp-route-categoryId="@filterCategoryId" asp-route-status="@filterStatus" asp-route-search="@filterSearch">
                    Anterior
                </a>
            </li>
            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-month="@selectedMonth" asp-route-year="@selectedYear"
                       asp-route-page="@p" asp-route-pageSize="@pageSize"
                       asp-route-categoryId="@filterCategoryId" asp-route-status="@filterStatus" asp-route-search="@filterSearch">
                        @p
                    </a>
                </li>
            }
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-month="@selectedMonth" asp-route-year="@selectedYear"
                   asp-route-page="@(currentPage + 1)" asp-route-pageSize="@pageSize"
                   asp-route-categoryId="@filterCategoryId" asp-route-status="@filterStatus" asp-route-search="@filterSearch">
                    Próxima
                </a>
            </li>
        </ul>
    </nav>
}

@functions
{
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pago" => "bg-success",
            "Pendente" => "bg-warning",
            "Atrasado" => "bg-danger",
            "Encerrada" => "bg-secondary",
            _ => "bg-info"
        };
    }
}

<!-- Modal Confirmar Exclusão de Despesa -->
<div class="modal fade" id="deleteExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger bg-opacity-10">
                <h5 class="modal-title text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Excluir despesa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir a despesa <strong id="deleteExpenseName"></strong> (R$ <span id="deleteExpenseAmount"></span>)?</p>
                <p class="text-muted small mb-0">Esta ação não pode ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteExpenseForm" method="post" asp-action="DeleteExpenseConfirmed" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="expenseId" id="deleteExpenseIdInput" />
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Sim, excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imagePreviewModalLabel">Imagem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body text-center">
                <img id="imagePreviewModalImg" src="" alt="Imagem ampliada" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var pageSizeSelect = document.getElementById('pageSizeSelect');
            var pageSizeInput = document.getElementById('pageSizeInput');
            var filterForm = document.getElementById('filterForm');
            if (pageSizeSelect && pageSizeInput) {
                var saved = localStorage.getItem('expensePageSize');
                if (saved) {
                    pageSizeSelect.value = saved;
                    pageSizeInput.value = saved;
                }
                pageSizeSelect.addEventListener('change', function() {
                    var v = this.value;
                    pageSizeInput.value = v;
                    localStorage.setItem('expensePageSize', v);
                    filterForm.submit();
                });
            }

            document.querySelectorAll('.btn-delete-expense').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var id = this.getAttribute('data-expense-id');
                    var name = this.getAttribute('data-expense-name');
                    var amount = this.getAttribute('data-expense-amount');
                    document.getElementById('deleteExpenseIdInput').value = id;
                    document.getElementById('deleteExpenseName').textContent = name || '';
                    document.getElementById('deleteExpenseAmount').textContent = amount || '';
                    new bootstrap.Modal(document.getElementById('deleteExpenseModal')).show();
                });
            });

            var imagePreviewModal = document.getElementById('imagePreviewModal');
            if (imagePreviewModal) {
                imagePreviewModal.addEventListener('show.bs.modal', function (event) {
                    var trigger = event.relatedTarget;
                    if (!trigger) return;

                    var imageUrl = trigger.getAttribute('data-bs-image');
                    var title = trigger.getAttribute('data-bs-title');
                    var modalImg = document.getElementById('imagePreviewModalImg');
                    var modalTitle = document.getElementById('imagePreviewModalLabel');

                    if (modalImg && imageUrl) {
                        modalImg.src = imageUrl;
                    }
                    if (modalTitle && title) {
                        modalTitle.textContent = title;
                    }
                });
            }

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

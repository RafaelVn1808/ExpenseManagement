@model IEnumerable<ExpenseWeb.Models.ExpenseViewModel>

@{
    ViewData["Title"] = "Despesas";

    int selectedMonth = ViewBag.SelectedMonth ?? DateTime.Now.Month;
    int selectedYear = ViewBag.SelectedYear ?? DateTime.Now.Year;
}

<h2 class="mb-4">Despesas</h2>

<!-- Filtro por Mês / Ano -->
<form method="get"
      asp-action="Index"
      class="row g-3 align-items-end mb-4">

    <div class="col-md-3">
        <label class="form-label">Mês</label>
        <select name="month" class="form-select">
            @for (int m = 1; m <= 12; m++)
            {
                <option value="@m" selected="@(m == selectedMonth)">
                    @System.Globalization.CultureInfo.CurrentCulture
                    .DateTimeFormat
                    .GetMonthName(m)
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Ano</label>
        <select name="year" class="form-select">
            @for (int y = DateTime.Now.Year - 5; y <= DateTime.Now.Year + 1; y++)
            {
                <option value="@y" selected="@(y == selectedYear)">
                    @y
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-funnel"></i> Filtrar
        </button>
    </div>

    <div class="col-md-3 text-end">
        <a asp-action="CreateExpense" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nova Despesa
        </a>
    </div>
</form>

<!-- Tabela -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Data</th>
                <th>Nome</th>
                <th>Valor</th>
                <th>Parcela</th>
                <th>Status</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        Nenhuma despesa encontrada para este período
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.Name</td>
                        <td>@item.Amount.ToString("C")</td>
                        <td>
                            <span class="badge bg-info">
                                @item.InstallmentLabel
                            </span>
                        </td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(item.Status)">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-secondary">
                                @item.CategoryName
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="CreateExpense"
                                   asp-route-id="@item.ExpenseId"
                                   class="btn btn-sm btn-outline-warning"
                                   title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.ExpenseId"
                                   class="btn btn-sm btn-outline-danger"
                                   title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@functions
{
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pago" => "bg-success",
            "Pendente" => "bg-warning",
            "Atrasado" => "bg-danger",
            "Cancelado" => "bg-secondary",
            _ => "bg-info"
        };
    }
}



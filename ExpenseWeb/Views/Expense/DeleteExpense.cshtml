@model ExpenseWeb.Models.ExpenseViewModel

@{
    ViewData["Title"] = "Excluir Despesa";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">

        <!-- Card de Confirmação -->
        <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
            <div class="card-header bg-danger bg-opacity-10 border-bottom-0 pt-4 pb-3 text-center">
                <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                    <i class="bi bi-exclamation-triangle-fill fs-3"></i>
                </div>
                <h4 class="card-title fw-bold text-danger">Confirmar Exclusão</h4>
                <p class="text-secondary mb-0">Tem certeza que deseja remover esta despesa?</p>
            </div>

            <div class="card-body p-4">
                <!-- Resumo da Despesa -->
                <div class="bg-light rounded-3 p-3 mb-4">
                    <div class="row mb-2">
                        <div class="col-4 text-secondary small fw-bold text-uppercase">Descrição</div>
                        <div class="col-8 fw-semibold text-dark">@Model.Name</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 text-secondary small fw-bold text-uppercase">Valor</div>
                        <div class="col-8 text-danger fw-bold">@Model.Amount.ToString("C")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 text-secondary small fw-bold text-uppercase">Data</div>
                        <div class="col-8">@Model.Date.ToShortDateString()</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 text-secondary small fw-bold text-uppercase">Parcelas</div>
                        <div class="col-8">@Model.InstallmentLabel</div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-secondary small fw-bold text-uppercase">Categoria</div>
                        <div class="col-8"><span class="badge bg-secondary">@Model.CategoryName</span></div>
                    </div>
                </div>

                <form asp-action="DeleteExpenseConfirmed" method="post">
                    <!-- Campo Oculto para o ID -->
                    <input type="hidden" asp-for="ExpenseId" />

                    <div class="alert alert-warning border-0 small py-2 d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Esta ação não poderá ser desfeita após a confirmação.
                    </div>

                    <!-- Botões de Ação -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 me-md-2">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger px-4 fw-bold shadow-sm">
                            <i class="bi bi-trash3 me-1"></i> Sim, Excluir
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@model ExpenseWeb.Models.ExpenseViewModel

@{
    ViewData["Title"] = "Nova Despesa";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">

        <!-- Card Principal -->
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h4 class="card-title fw-bold text-secondary">
                    <i class="bi bi-plus-circle me-2 text-primary"></i>Nova Despesa
                </h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="CreateExpense" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Nome / Descrição -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold text-secondary">Descrição</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-card-text text-muted"></i></span>
                            <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="Ex: Mercado, Aluguel..." />
                        </div>
                        <span asp-validation-for="Name" class="text-danger text-sm"></span>
                    </div>

                    <!-- Linha 1: Valor e Data Início -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label fw-semibold text-secondary">Valor (R$)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-currency-dollar text-muted"></i></span>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control border-start-0 ps-0" placeholder="0,00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Date" class="form-label fw-semibold text-secondary">Data Início</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar3 text-muted"></i></span>
                                <input asp-for="Date" type="date" class="form-control border-start-0 ps-0" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Linha 2: Validade e Parcelas -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Validity" class="form-label fw-semibold text-secondary">Validade/Vencimento</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar-event text-muted"></i></span>
                                <input asp-for="Validity" type="date" class="form-control border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Validity" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Installments" class="form-label fw-semibold text-secondary">Parcelas</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-123 text-muted"></i></span>
                                <input asp-for="Installments" type="number" min="1" class="form-control border-start-0 ps-0" value="1" placeholder="1" />
                            </div>
                            <span asp-validation-for="Installments" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Linha 3: Status e Categoria -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label fw-semibold text-secondary">Status</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-flag text-muted"></i></span>
                                <select asp-for="Status" class="form-select border-start-0 ps-0">
                                    <option value="" selected disabled>Selecione um status...</option>
                                    <option value="Pendente">Pendente</option>
                                    <option value="Atrasado">Atrasado</option>
                                    <option value="Pago">Pago</option>
                                    <option value="Encerrada">Encerrada</option>
                                </select>
                            </div>
                            <small class="form-text text-muted">
                                Pendente: antes do vencimento; Atrasado: após vencimento; Pago: parcela paga;
                                Encerrada: despesa quitada.
                            </small>
                            <span asp-validation-for="Status" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="CategoryId" class="form-label fw-semibold text-secondary">Categoria</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-tag text-muted"></i></span>
                                <select asp-for="CategoryId" id="CategoryId" class="form-select border-start-0 ps-0" asp-items="ViewBag.CategoryId">
                                    <option value="" selected disabled>Selecione uma categoria...</option>
                                </select>
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#novaCategoriaModal" title="Nova categoria">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Upload de Imagens -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NoteImageFile" class="form-label fw-semibold text-secondary">
                                <i class="bi bi-receipt me-1"></i>Imagem da Nota Fiscal
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-image text-muted"></i>
                                </span>
                                <input asp-for="NoteImageFile" type="file" 
                                       class="form-control border-start-0 ps-0" 
                                       accept="image/*"
                                       onchange="previewImage(this, 'notePreview')" />
                            </div>
                            <span asp-validation-for="NoteImageFile" class="text-danger text-sm"></span>
                            <small class="form-text text-muted">
                                Formatos aceitos: JPG, PNG, GIF, WEBP (máx. 5MB)
                            </small>
                            <div id="notePreview" class="mt-2" style="display: none;">
                                <img id="notePreviewImg" src="" alt="Preview" class="img-thumbnail" style="max-height: 150px; max-width: 100%;" />
                                <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeImage('notePreview', 'NoteImageFile')">
                                    <i class="bi bi-x-circle me-1"></i> Remover
                                </button>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ProofImageFile" class="form-label fw-semibold text-secondary">
                                <i class="bi bi-file-earmark-check me-1"></i>Imagem do Comprovante
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-image text-muted"></i>
                                </span>
                                <input asp-for="ProofImageFile" type="file" 
                                       class="form-control border-start-0 ps-0" 
                                       accept="image/*"
                                       onchange="previewImage(this, 'proofPreview')" />
                            </div>
                            <span asp-validation-for="ProofImageFile" class="text-danger text-sm"></span>
                            <small class="form-text text-muted">
                                Formatos aceitos: JPG, PNG, GIF, WEBP (máx. 5MB)
                            </small>
                            <div id="proofPreview" class="mt-2" style="display: none;">
                                <img id="proofPreviewImg" src="" alt="Preview" class="img-thumbnail" style="max-height: 150px; max-width: 100%;" />
                                <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeImage('proofPreview', 'ProofImageFile')">
                                    <i class="bi bi-x-circle me-1"></i> Remover
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 me-md-2">
                            <i class="bi bi-arrow-left me-1"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-success px-4 fw-bold">
                            <i class="bi bi-check-lg me-1"></i> Cadastrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Toast sucesso categoria -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toastCategoriaCriada" class="toast align-items-center text-bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body"><i class="bi bi-check-circle me-2"></i>Categoria criada com sucesso.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<!-- Modal Nova Categoria -->
<div class="modal fade" id="novaCategoriaModal" tabindex="-1" aria-labelledby="novaCategoriaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="novaCategoriaModalLabel"><i class="bi bi-tag me-2"></i>Nova Categoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2">
                    <label for="novaCategoriaNome" class="form-label">Nome</label>
                    <input type="text" id="novaCategoriaNome" class="form-control" placeholder="Ex: Alimentação, Transporte..." maxlength="100" />
                    <div id="novaCategoriaErro" class="text-danger small mt-1" style="display: none;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnSalvarCategoria">
                    <i class="bi bi-check-lg me-1"></i>Salvar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input, previewId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                var previewDiv = document.getElementById(previewId);
                var previewImg = document.getElementById(previewId + 'Img');

                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewDiv.style.display = 'block';
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage(previewId, inputId) {
            document.getElementById(previewId).style.display = 'none';
            document.getElementById(previewId + 'Img').src = '';
            document.getElementById(inputId).value = '';
        }

        // Nova categoria (modal)
        document.getElementById('btnSalvarCategoria').addEventListener('click', function () {
            var nome = document.getElementById('novaCategoriaNome').value.trim();
            var erroEl = document.getElementById('novaCategoriaErro');
            erroEl.style.display = 'none';
            if (!nome) {
                erroEl.textContent = 'Informe o nome da categoria.';
                erroEl.style.display = 'block';
                return;
            }
            var btn = this;
            btn.disabled = true;
            fetch('@Url.Action("CreateAjax", "Category")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name: nome }),
                credentials: 'same-origin'
            })
            .then(function (r) { return r.json(); })
            .then(function (data) {
                if (data.success) {
                    var sel = document.getElementById('CategoryId');
                    var opt = new Option(data.name, data.categoryId, true, true);
                    sel.add(opt);
                    var modal = bootstrap.Modal.getInstance(document.getElementById('novaCategoriaModal'));
                    if (modal) modal.hide();
                    document.getElementById('novaCategoriaNome').value = '';
                    var toastEl = document.getElementById('toastCategoriaCriada');
                    if (toastEl) {
                        var toast = new bootstrap.Toast(toastEl);
                        toast.show();
                    }
                } else {
                    erroEl.textContent = data.message || 'Erro ao criar categoria.';
                    erroEl.style.display = 'block';
                }
            })
            .catch(function () {
                erroEl.textContent = 'Erro de conexão. Tente novamente.';
                erroEl.style.display = 'block';
            })
            .finally(function () { btn.disabled = false; });
        });
    </script>
}
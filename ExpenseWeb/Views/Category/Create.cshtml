@model ExpenseWeb.Models.CategoryViewModel

@{
    ViewData["Title"] = "Nova Categoria";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">

        <!-- Card Principal -->
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h4 class="card-title fw-bold text-secondary">
                    <i class="bi bi-tag-fill me-2 text-primary"></i>Nova Categoria
                </h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Nome da Categoria -->
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold text-secondary">
                            <i class="bi bi-card-text me-1"></i>Nome da Categoria
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-tag text-muted"></i>
                            </span>
                            <input asp-for="Name" 
                                   class="form-control border-start-0 ps-0" 
                                   placeholder="Ex: Alimentação, Transporte, Saúde..." 
                                   autofocus />
                        </div>
                        <span asp-validation-for="Name" class="text-danger text-sm"></span>
                        <small class="form-text text-muted">
                            Digite um nome descritivo para a categoria
                        </small>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" asp-controller="Expense" class="btn btn-outline-secondary px-4 me-md-2">
                            <i class="bi bi-arrow-left me-1"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-success px-4 fw-bold">
                            <i class="bi bi-check-lg me-1"></i> Cadastrar Categoria
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
